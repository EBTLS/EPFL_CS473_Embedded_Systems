#ifndef RTC_H_
#define RTC_H_
#include "io.h"

#define IORD_RTC_COUNT(base)        	IORD_8DIRECT(base, 0)
#define IOWR_RTC_COUNT(base, data)  	IOWR_8DIRECT(base, 0, data)

#define IORD_RTC_SET(base) 				IORD_8DIRECT(base, 1)
#define IOWR_RTC_SET(base) 				IOWR_8DIRECT(base, 1, data)

#define IORD_RTC_SET_SEC(base) 			IORD_8DIRECT(base, 2)
#define IORD_RTC_SET_SEC(base, data) 	IOWR_8DIRECT(base, 2, data)

#define IORD_RTC_SET_MIN(base) 			IORD_8DIRECT(base, 3)
#define IORD_RTC_SET_MIN(base, data) 	IOWR_8DIRECT(base, 3, data)

#define IORD_RTC_SET_HR(base) 			IORD_8DIRECT(base, 4)
#define IORD_RTC_SET_HR(base, data) 	IOWR_8DIRECT(base, 4, data)





#endif /* RTC_H_ */
